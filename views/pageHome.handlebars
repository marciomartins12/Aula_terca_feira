<section class="gradient-bg min-h-screen flex flex-col items-center justify-center p-4 text-white font-sans">
    <!-- Notification -->
    <div id="success-message"
        class="fixed top-8 left-1/2 transform -translate-x-1/2 glass-card px-6 py-3 rounded-full shadow-xl flex items-center space-x-2 opacity-0">
        <div class="w-6 h-6 bg-green-400 rounded-full flex items-center justify-center">
            <i class="fas fa-check text-xs text-white"></i>
        </div>
        <span class="font-medium">Login realizado com sucesso!</span>
    </div>

    <!-- Main Content -->
    <div class="text-center max-w-md w-full">
        <!-- Animated Checkmark -->
        <div class="floating mb-8">
            <div
                class="w-32 h-32 bg-white bg-opacity-10 rounded-full flex items-center justify-center mx-auto glass-card">
                <div class="w-20 h-20 bg-green-400 rounded-full flex items-center justify-center pulse">
                    <i class="fas fa-check text-4xl text-white"></i>
                </div>
            </div>
        </div>

        <!-- Welcome Message -->
        <div class="mb-10 fade-in" style="animation-delay: 0.3s">
            <h1 class="text-4xl font-bold mb-3">Bem-vindo de volta,</h1>
            <p class="text-3xl font-light text-blue-200" id="username">{{user.userName}}</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 gap-4 mb-10">
            <div class="glass-card rounded-xl p-4 fade-in" style="animation-delay: 0.5s">
                <div class="text-blue-200 mb-1">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="text-sm opacity-80">Último acesso</div>
                <div class="font-medium" id="last-login">{{user.lastLogin}}</div>
            </div>

            <div class="glass-card rounded-xl p-4 fade-in" style="animation-delay: 0.7s">
                <div class="text-blue-200 mb-1">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="text-sm opacity-80">Status</div>
                <div class="font-medium">Verificado</div>
            </div>
        </div>

        <!-- Action Button -->
        <button id="continue-btn"
            class="w-full bg-white text-blue-900 py-4 rounded-xl font-semibold hover:bg-opacity-90 transition-all transform hover:scale-[1.02] shadow-lg fade-in"
            style="animation-delay: 0.9s">
            Logout
            <i class="fas fa-arrow-right ml-2"></i>
        </button>
    </div>

    <!-- Footer -->
    <div class="mt-12 text-center text-sm opacity-70 fade-in" style="animation-delay: 1.1s">
        <p>Sistema seguro • Criptografia de ponta a ponta</p>
        <div class="flex justify-center space-x-3 mt-3 text-blue-200">
            <i class="fas fa-lock"></i>
            <i class="fas fa-shield-alt"></i>
            <i class="fas fa-check-double"></i>
        </div>
    </div>
<script src="/js/pageHome.js"></script>
</section>